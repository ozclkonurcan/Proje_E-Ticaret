<div class="modal fade" id="CicekSepetiDetailDuzenle">

    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title center-block" id="modalTitle">Çiçek Sepeti Ürün Düzenle</h3>
            </div>
            <div class="modal-body">

                <form method="post">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-3">
                                @Html.TextBoxFor(model => model.itarih);
                            </div>
                            <div class="col-md-3">
                                @Html.TextBoxFor(model => model.silme);
                            </div>
                            <div class="col-md-3">
                                @Html.TextBoxFor(model => model.ayarAdi);
                            </div>
                            <div class="col-md-3">
                                @Html.TextBoxFor(model => model.ayar);
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-12">
                                @Html.TextAreaFor(model => model.aciklama);
                            </div>
                        </div>

                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-3">
                                @Html.TextBoxFor(model => model.barkod);
                            </div>
                            <div class="col-md-3">
                                @Html.TextBoxFor(model => model.brand);
                            </div>
                            <div class="col-md-3">
                                @Html.TextBoxFor(model => model.kargo);
                            </div>
                            <div class="col-md-3">
                                @Html.TextBoxFor(model => model.cinsiyet);
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-3">
                                @Html.TextBoxFor(model => model.resim);
                            </div>
                            <div class="col-md-3">
                                @Html.TextBoxFor(model => model.listeFiyat);
                            </div>
                            <div class="col-md-3">
                                @Html.TextBoxFor(model => model.satisFiyat);
                            </div>
                            <div class="col-md-3">
                                @Html.TextBoxFor(model => model.kategori);
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-3">
                                @Html.TextBoxFor(model => model.stok);
                            </div>
                            <div class="col-md-3">
                                @Html.TextBoxFor(model => model.stokKodu);
                            </div>
                            <div class="col-md-3">
                                @Html.TextBoxFor(model => model.baslik);
                            </div>
                            <div class="col-md-3">
                                @Html.TextBoxFor(model => model.kdv);
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-3">
                                @Html.TextBoxFor(model => model.mail);
                            </div>
                            <div class="col-md-3">
                                @Html.TextBoxFor(model => model.durum);
                            </div>
                            <div class="col-md-3">
                                @Html.TextBoxFor(model => model.upTarih);
                            </div>
                            <div class="col-md-3">
                                @Html.TextBoxFor(model => model.upFiyatTarih);
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-3">
                                @Html.TextBoxFor(model => model.batchId);
                            </div>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <a href="#" class="btn btn-info" data-dismiss="modal">İptal</a>
                        <button type="submit" class="btn btn-success">Kaydet</button>
                    </div>
                </form>

            </div>
        </div>
    </div>

</div>