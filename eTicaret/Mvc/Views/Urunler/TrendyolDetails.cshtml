            </a>
            <button type="button" class="btn btn-outline-primary" id="btnDuzenle" data-toggle="modal" data-target="#TrendyolDetailDuzenle">
                <i class="ki ki-gear"></i>
                Düzenle
            </button>
        </div>




        @Html.HiddenFor(model => model.otosay)

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group mt-15">


            <div class="row">
                <div class="col-xl-12">
                    <!--begin::Engage Widget 14-->
                    <div class="card card-custom wave wave-animate wave-success mb-8 mb-lg-0 card-stretch gutter-b">
                        <div class="card-body p-15 pb-20">
                            <div class="row mb-17">
                                <div class="col-xxl-5 mb-11 mb-xxl-0">
                                    <!--begin::Image-->
                                    <div class="card card-custom card-stretch">
                                        <div class="card-body p-0 rounded px-10 py-15 d-flex align-items-center justify-content-center" style="background-color: #fff;">
                                            @if (Model.resim == null || Model.resim == "")
                                            {

                                                <img src="~/assets/img/gorselYok.png" class="mw-100 w-200px" style="transform: scale(1.3);">
                                            }
                                            else
                                            {

                                                <img src="@Html.DisplayFor(model => model.resim)" class="mw-100 w-200px" style="transform: scale(1.3);">
                                            }
                                        </div>
                                    </div>
                                    <!--end::Image-->
                                </div>
                                <div class="col-xxl-7 pl-xxl-11">
                                    <h2 class="font-weight-bolder text-dark mb-7" style="font-size: 32px;">  @Html.DisplayFor(model => model.baslik)</h2>
                                    <h4>@Html.DisplayFor(model => model.mail)</h4>
                                    <div class="font-size-h2 mb-7 text-dark-50">
                                        <span class="text-info font-weight-boldest ml-2">
                                            @Html.DisplayFor(model => model.satisFiyat) ₺ <br />
                                            <span class="label label-inline label-md label-info">PanoHas :@Html.DisplayFor(model => model.panoHas)₺</span>
                                            <span class="label label-inline label-md label-info">Milyem :@Html.DisplayFor(model => model.milyem)₺</span>
                                            <span class="label label-inline label-md label-info">Komisyon :@Html.DisplayFor(model => model.komisyon)₺</span>
                                            <span class="label label-inline label-md label-info">Gün :@Html.DisplayFor(model => model.gun)₺</span>
                                            <span class="label label-inline label-md label-info">Gram :@Html.DisplayFor(model => model.gram)₺</span>
                                            <span class="label label-inline label-md label-info">Yüzde :@Html.DisplayFor(model => model.yuzde)%</span>

                                        </span>
                                    </div>




                                    <div class="line-height-xl">

                                        @*@Html.DisplayFor(model => model.aciklama)*@
                                        @Html.Raw(Model.aciklama)
                                    </div>
                                </div>
                            </div>
